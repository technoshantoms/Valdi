{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2022.intl"],
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["@types", "node_modules/@types", "src/types"],
    "sourceMap": true,
    "composite": true,
    "allowJs": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
